<div id="heromodule">
	<div id="hero" class="hero slide">
	  <!-- Carousel items -->
	  <div class="carousel-inner">
	    <div class="active item"><%= image_tag "backgrounds/hero1.jpg" %> </div>
	    <div class="item"><%= image_tag "backgrounds/hero3.jpg" %> </div>
